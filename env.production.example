# ========================================
# ATENDECHAT 2.0 - PRODUÇÃO
# ========================================
# ⚠️  NUNCA COMMITAR ESTE ARQUIVO NO GIT!
# Copiar para o servidor e configurar valores reais

# ========================================
# AMBIENTE & URLs
# ========================================
NODE_ENV=production
APP_URL=https://app.seudominio.com
FRONTEND_URL=https://app.seudominio.com
NEXT_PUBLIC_API_URL=https://api.seudominio.com
CORS_ALLOWED_ORIGINS=https://app.seudominio.com,https://api.seudominio.com

# ========================================
# LOGS & DEBUG
# ========================================
LOG_LEVEL=info
REDACT_PII=true

# ========================================
# JWT & SEGURANÇA
# ========================================
JWT_SECRET=SUA_CHAVE_JWT_SUPER_SECRETA_AQUI_64_CHARS
JWT_REFRESH_SECRET=SUA_CHAVE_REFRESH_SUPER_SECRETA_AQUI_64_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# BANCO DE DADOS (Neon PostgreSQL)
# ========================================
DATABASE_URL="postgresql://usuario:senha@ep-xxxxx.us-east-1.aws.neon.tech/atendechat?sslmode=require"
DIRECT_URL="postgresql://usuario:senha@ep-xxxxx.us-east-1.aws.neon.tech/atendechat?sslmode=require"

# ========================================
# REDIS (Upstash)
# ========================================
REDIS_URL=redis://usuario:senha@us-east-1.aws.upstash.io:6379
REDIS_HOST=us-east-1.aws.upstash.io
REDIS_PORT=6379
REDIS_USERNAME=usuario
REDIS_PASSWORD=senha
REDIS_DB=0

# ========================================
# WEBSOCKET
# ========================================
WS_ALLOWED_ORIGENS=https://app.seudominio.com,https://api.seudominio.com

# ========================================
# OBSERVABILIDADE
# ========================================
OTEL_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PORT=9090

# ========================================
# HEADERS DE SEGURANÇA
# ========================================
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
CSP_REPORT_ONLY=false

# ========================================
# SMTP (Email)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app
SMTP_FROM=noreply@seudominio.com

# ========================================
# HORÁRIO COMERCIAL & SLA
# ========================================
DEFAULT_BUSINESS_HOURS_START=08:00
DEFAULT_BUSINESS_HOURS_END=18:00
DEFAULT_BUSINESS_HOURS_TIMEZONE=America/Sao_Paulo
DEFAULT_SLA_HOURS=4

# ========================================
# PROVIDERS (WhatsApp, etc.)
# ========================================
WHATSAPP_CLOUD_ACCESS_TOKEN=seu_token_aqui
WHATSAPP_CLOUD_PHONE_NUMBER_ID=seu_phone_number_id
WHATSAPP_CLOUD_VERIFY_TOKEN=seu_verify_token

# ========================================
# UPLOAD & STORAGE
# ========================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ========================================
# CACHE (Redis)
# ========================================
CACHE_DASHBOARD_TTL_S=300
CACHE_SETTINGS_TTL_S=3600

# ========================================
# BULLMQ TUNING
# ========================================
BULLMQ_MESSAGES_CONCURRENCY=10
BULLMQ_CAMPAIGNS_CONCURRENCY=5
BULLMQ_RATE_LIMIT_CPS=100
BULLMQ_LOCK_DURATION_MS=30000
BULLMQ_MAX_STALLED=5

# ========================================
# SLOs (Service Level Objectives)
# ========================================
SLO_API_P50_MS=200
SLO_API_P95_MS=500
SLO_WS_DELIVERY_P95_MS=100
SLO_QUEUE_LAG_P95_MS=1000

# ========================================
# QA & PERFORMANCE (DESABILITADO EM PROD)
# ========================================
QA_SEED_DEMO=false
QA_SYNTHETIC_USERS=0
QA_SYNTHETIC_TICKETS=0
QA_SYNTHETIC_MESSAGES_PER_TICKET=0

# ========================================
# K6 (DESABILITADO EM PROD)
# ========================================
K6_BASE_URL=https://api.seudominio.com
K6_WEB_URL=https://app.seudominio.com
K6_ACCESS_EMAIL=admin@seudominio.com
K6_ACCESS_PASSWORD=senha_super_secreta

# ========================================
# CHAOS ENGINEERING (DESABILITADO EM PROD)
# ========================================
CHAOS_ENABLED=false

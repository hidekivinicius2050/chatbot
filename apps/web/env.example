# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# Web Push (VAPID)
WEB_PUSH_ENABLED=true
WEB_PUBLIC_VAPID_PUBLIC_KEY=
WEB_PUSH_VAPID_PRIVATE_KEY=
WEB_PUSH_SUBJECT=mailto:contato@seudominio.com

# Notificações & Preferências
NOTIFY_DEFAULT_SOUND=ping-1
NOTIFY_QUIET_HOURS_START=22:00
NOTIFY_QUIET_HOURS_END=07:00

# WebSocket
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Theme
NEXT_PUBLIC_DEFAULT_THEME=dark

# Observabilidade opcional
SENTRY_DSN=
POSTHOG_KEY=
POSTHOG_HOST=https://us.posthog.com

# Onboarding
ONBOARDING_ENABLED=true
ONBOARDING_DEFAULT_CHANNEL=whatsapp-cloud   # whatsapp-cloud | baileys | none
ONBOARDING_SAMPLE_DATA=true                 # cria 1 ticket demo

# Help Center (mdx interno)
HELP_CENTER_ENABLED=true

# IA de Atendimento
AI_PROVIDER=openai                  # openai | azureopenai (futuro)
OPENAI_API_KEY=
AI_CHAT_MODEL=gpt-4o-mini          # p/ respostas e sumários
AI_EMBED_MODEL=text-embedding-3-small

# Limites de custo/uso por tenant (proteção)
AI_MAX_TOKENS_PER_DAY=200000
AI_ENABLE_SUMMARIZE=true
AI_ENABLE_SUGGESTIONS=true
AI_ENABLE_AUTOTAG=true

# PgVector (Neon)
PGVECTOR_ENABLED=true

# Billing
BILLING_MODE=stripe               # stripe | mock
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_BILLING_PORTAL=true

# Planos (mapeamento preço->regras)
STRIPE_PRICE_FREE=
STRIPE_PRICE_PRO=
STRIPE_PRICE_BUSINESS=
STRIPE_PRICE_ENTERPRISE=

# Faturamento/Impostos (opcional)
BILLING_TRIAL_DAYS=14
BILLING_CURRENCY=BRL
BILLING_TAX_INCLUSIVE=true

# Entitlements (defaults de segurança; Stripe pode sobrescrever)
PLAN_FREE_LIMIT_MESSAGES=3000
PLAN_FREE_LIMIT_CONTACTS=500
PLAN_FREE_LIMIT_CHANNELS=1
PLAN_FREE_LIMIT_SEATS=2

PLAN_PRO_LIMIT_MESSAGES=50000
PLAN_PRO_LIMIT_CONTACTS=10000
PLAN_PRO_LIMIT_CHANNELS=3
PLAN_PRO_LIMIT_SEATS=10

PLAN_BUSINESS_LIMIT_MESSAGES=250000
PLAN_BUSINESS_LIMIT_CONTACTS=50000
PLAN_BUSINESS_LIMIT_CHANNELS=10
PLAN_BUSINESS_LIMIT_SEATS=50

PLAN_ENTERPRISE_LIMIT_MESSAGES=999999999
PLAN_ENTERPRISE_LIMIT_CONTACTS=999999999
PLAN_ENTERPRISE_LIMIT_CHANNELS=999
PLAN_ENTERPRISE_LIMIT_SEATS=999

# LGPD
LGPD_CONTACT_EMAIL=privacidade@seudominio.com
RETENTION_FREE_DAYS=90
RETENTION_PRO_DAYS=365
RETENTION_BUSINESS_DAYS=730
RETENTION_ENTERPRISE_DAYS=3650
